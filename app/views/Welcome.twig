{% extends "header/Header.twig" %}


{% block content %}



    <div id="carouselExampleCaptions" class="carousel slide" style="position: fixed;width: 100%;z-index: 1;top:150px;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">

            {% set count = 0 %}
            {% for img in slider %}

                {% set count = count + 1 %}


                {% if count == 1 %}
                    <div class="carousel-item active">
                        <img src="https://recursos.mps.com.co/images/Productos/{{ img.Imagenes }}" class="d-block w-60"
                             alt="..." style="padding: 0 100px">
                        <div class="carousel-caption d-none d-md-block" style="text-align: left">
                            <button type="button" class="btn-color-blue btn">!Comprar ahora¡</button>
                            <p style="color: #000000;padding: 40px 0 0 0">{{ img.Description }}</p>
                        </div>

                    </div>
                {% endif %}

                {% if count == 2 %}
                    <div class="carousel-item">
                        <img src="https://recursos.mps.com.co/images/Productos/{{ img.Imagenes }}" class="d-block w-60"
                             alt="..." style="padding: 0 100px">
                        <div class="carousel-caption d-none d-md-block" style="text-align: left">
                            <button type="button" class="btn-color-blue btn">!Comprar ahora¡</button>
                            <p style="color: rgb(224,224,197);padding: 40px 0 0 0">{{ img.Description }}</p>
                        </div>
                    </div>
                {% endif %}

                {% if count == 3 %}
                    <div class="carousel-item">
                        <img src="https://recursos.mps.com.co/images/Productos/{{ img.Imagenes }}" class="d-block w-60"
                             alt="..." style="padding: 0 100px">
                        <div class="carousel-caption d-none d-md-block" style="text-align: left">
                            <button type="button" class="btn-color-blue btn">!Comprar ahora¡</button>
                            <p style="color: rgb(185,185,195);padding: 40px 0 0 0">{{ img.Description }}</p>
                        </div>
                    </div>
                {% endif %}

            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>





    <div style="margin-top: 100vh;">


        <div style="height: 150px; overflow: hidden;z-index: 2;position: relative">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
                <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: #ffffff;"></path>
            </svg>
        </div>
        <div style=" background-color: white;z-index: 2;position: relative">


            <div class="campo_titulo">
                <div class="title_1">Tenemos las mejores marcas los mejores precios</div>
            </div>


            <div class="position">
                <div id="imagenWelcome" class="imgMarca">

                    <img src="{{ getAssets('marca/img1.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img2.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img3.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img4.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img5.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img10.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img11.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img12.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img13.png') }}" class="elemento" alt="">
                    <img src="{{ getAssets('marca/img14.png') }}" class="elemento" alt="">

                </div>
            </div>


            <div class="gridMarcas" style="display: none">
                {% for s in marca %}
                    <div class="marcas">
                        <form action="/" method="post">
                            <input type="hidden" value="{{ s }}" name="marcas">
                            <button type="submit" class="btn_text js-reload">{{ s }}</button>
                        </form>
                    </div>
                {% endfor %}
            </div>

            <div class="vendido">
                <div class="campo_titulo">
                    <div class="title_2">Lo más destacado</div>
                </div>
            </div>


            <div class="gridDestacado">
                {% for s in destacar %}
                    <div class="card" style="border:0 solid">
                        <img src="https://recursos.mps.com.co/images/Productos/{{ s.Imagenes }}" class="d-block w-100"
                             alt="..." onerror="this.style.display = 'none'">
                        <div class="card-body">
                            <div style="text-align: center;">
                                <button type="button" class="btn btn-primary"
                                        style="box-shadow: 2px 2px 2px rgba(0,0,0,26%)">¡Mejor Precio!
                                </button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>


            <div class="vendido">
                <div class="campo_titulo">
                    <div class="title_2">Lo mas vendido para transformación digital</div>
                </div>
                <div class="gridDestacado ">
                    {% for s in destacar %}
                        <div class="card" style="background-color: transparent; border: 0">
                            <img src="https://recursos.mps.com.co/images/Productos/{{ s.Imagenes }}"
                                 class="d-block w-100"
                                 alt="..." onerror="this.style.display = 'none'" style="border-radius: 8px">
                            <div class="card-body" style="align-self: center">

                                <button type="button" class="btn btn-outline-light">¡Comprar Ahora!</button>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <br><br><br>
            </div>


            <div class="campo_titulo">
                <div class="title_1">Revisa nuestros mejores precios</div>
            </div>

            <div class="gridDestacado">
                {% for s in destacar %}
                    <div class="card" style="border: 0">
                        <img src="https://recursos.mps.com.co/images/Productos/{{ s.Imagenes }}" class="d-block w-100"
                             alt="..." onerror="this.style.display = 'none'">
                        <div class="card-body" style="align-self: center">
                            <button type="button" class="btn btn-success">¡Super Oferta!</button>
                        </div>
                    </div>
                {% endfor %}
            </div>


            <div class="Cuenta-welcome">
                <div class="bg-wel">
                    <div class="title_4">
                        Suscríbete a nuestra newsletter <br>
                        Unite a nuestra comunidad y enterate de nuestras promociones
                    </div>
                    <br>

                    <div>
                        <form action="">
                            <input type="email" placeholder="Ingresa tu correo" class="inputEmailWelcome">
                            <button type="button" class="btn btn-secondary">¡Suscribirme!</button>
                        </form>
                    </div>
                </div>
            </div>


            <div class="infoProduct">

                <div style="color: rgba(10,83,190,0.4)">
                    <div class="circle">
                        <img src="{{ getAssets('img/operador.png') }}" alt="">
                    </div>
                    <br><br>
                    <h3>Contacta a un asesor</h3>
                    <br>
                    <p>0000000000000</p>
                </div>

                <div style="color: rgba(10,83,190,0.4)">
                    <div class="circle">
                        <img src="{{ getAssets('img/cajaEnvio.png') }}" alt="">
                    </div>
                    <br><br>
                    <h3>Envío Nacionales</h3>
                    <br>
                    <p>Contamos con envíos gratis en miles de productos</p>
                </div>

                <div style="color: rgba(10,83,190,0.4)">
                    <div class="circle">
                        <img src="{{ getAssets('img/caja-fuerte.png') }}" alt="">
                    </div>
                    <br><br>
                    <h3>100 % Seguro</h3>
                    <br>
                    <p>Compra en linea</p>
                </div>

                <div style="color: rgba(10,83,190,0.4)">
                    <div class="circle">
                        <img src="{{ getAssets('img/whatsapp.png') }}" alt="">
                    </div>
                    <br><br>
                    <h3>Atención WhatsApp</h3>
                    <br>
                    <p>Contacto directo con nuestro asesor</p>
                </div>

            </div>


            <div class="Metodos">
                <div class="campo_titulo">
                    <div class="title_2">metodos de pago
                    </div>
                </div>
                <div>

                </div>
            </div>

        </div>
    </div>



    {% block checkout %}
