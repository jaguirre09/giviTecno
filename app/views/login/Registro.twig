{% extends 'Welcome.twig' %}



{% block content %}

    <style>
        header{
            display: none;
        }
        .footer{
            display: none;
        }
    </style>

<div class=" login-contend">

    <div class="registro_user">
        <div class="campo_titulo">
            <div class="title_1">
                Registrar
            </div>
        </div>

        <form class="row g-3 needs-validation" method="post" action="/GenerateCode">
            <div class="col-12">
                <label for="validationCustom01" class="form-label">Nombre</label>
                <input type="text" name="nombreUser" class="form-control" id="validationCustom01" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-12">
                <label for="validationCustom02" class="form-label">Teléfono</label>
                <input type="number" name="phoneUser" class="form-control" id="validationCustom02" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="col-12">
                <label for="validationCustomUsername" class="form-label">Username</label>
                <div class="input-group has-validation">
                    <span class="input-group-text" id="inputGroupPrepend">@</span>
                    <input type="text" name="emailUser" class="form-control" id="validationCustomUsername"
                           aria-describedby="inputGroupPrepend" required>
                    <div class="invalid-feedback">
                        Please choose a username.
                    </div>
                </div>
            </div>
            <div class="col-12">
                <label for="validationCustom02" class="form-label">Password</label>
                <input type="password" name="passUser" class="form-control" id="validationCustom02" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="col-12">
                <label for="validationCustom02" class="form-label">Confirmar Password</label>
                <input type="password" name="configUser" class="form-control" id="validationCustom02" value="" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>


            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                    <label class="form-check-label" for="invalidCheck">
                        Acepto los términos y condiciones
                    </label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
            </div>
            <div class="col-12" style="text-align: right">
                <button class="btn btn-primary" type="submit" name="registroUser">Registrar</button>
            </div>
        </form>

    </div>
</div>

    {% endblock %}
